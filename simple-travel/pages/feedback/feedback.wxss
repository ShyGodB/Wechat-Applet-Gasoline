.select_box{
    background: #fff;
    width: 80%;
    margin: 30rpx auto;
    position: relative;
}
.select{
    box-sizing: border-box;
    width: 100%;
    height: 70rpx;
    border:1px solid #efefef;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}
.select_text{
    color: orange;
    font-size: 30rpx;
    flex: 1;
}

.option_box{
    position: absolute;
    top: 70rpx;
    width: 100%;
    border:1px solid #efefef;
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
}
.option{
    width: 100%;
    display: block;
    line-height: 40rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
}

.submit {
    width: 60%;
    margin: 0 auto;
}

.toindex {
    width: 60%;
    margin: 20rpx auto;
}