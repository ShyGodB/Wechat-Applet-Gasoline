<view class="container">
    <view class="weui-cells_after-title box-top" bindtap="goToWarrant">
        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" style="margin-bottom: 40rpx;">
            <view class="weui-cell__hd">
                <image src="{{isUser === true ? userInfo.avatar_url : defaultUrl}}" mode="cover" style="margin-right: 10rpx;vertical-align: middle;width:80px; height: 80px;"></image>
            </view>
            <view class="weui-cell__bd">{{isUser === true ? userInfo.nickname : '授权登录'}}</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>
    </view> 


    <view class="box-main weui-cells weui-cells_after-title">

        <navigator url="/pages/data/data" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="/public/images/data.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">数据分析</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>

        <navigator url="/pages/info/info" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="/public/images/info.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">个人信息</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>

        <navigator url="/pages/feedback/feedback" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__hd">
                <image src="/public/images/feedback.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">问题反馈</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>

        <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap='showAuthor'>
            <view class="weui-cell__hd">
                <image src="/public/images/about.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
            </view>
            <view class="weui-cell__bd">关于作者</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </view>

    </view>      
</view>



