@import "/app.wxss";

page {
    background-color: #E8E8E8;
    padding: 0;
    margin: 0;
}

.top {
    height: 300rpx;
    background-color: #000000;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.main .main-content {
    background-color: #FFFFFF;
    border: 2rpx solid #FFFFFF;
    border-radius: 20rpx;
}

.main-title {
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 20rpx;
    font-size: 38rpx;
}

.main-title>text {
     padding-top: 20rpx;
}