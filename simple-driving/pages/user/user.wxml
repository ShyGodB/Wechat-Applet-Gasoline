<!--pages/main/main.wxml-->
<view class="container">
    <!-- cu-avatar xl round margin-left -->
    <view class="top w-100" style="background-image: url(../../public/images/night.jpeg)">
        <image bindtap="goToWarrant" class="userinfo-avatar" src="{{isUser === true ? userInfo.avatarUrl : defaultUrl}}" mode="cover"></image>
        <text bindtap="goToWarrant" class="userinfo-nickname text-white">{{isUser === true ? userInfo.nickName : '授权登录'}}</text>
    </view>

    <view class="header w-100 mb-10">
        <view class="cu-list grid col-{{gridCol}} {{gridBorder?'':'no-border'}}">
            <view class="cu-item" wx:for="{{items}}" wx:key>
                <text class="font-size-44 text-{{item.color}}">{{item.value}}</text>
                <text>{{item.name}}</text>
            </view>
        </view>
    </view>

    <view class="main p-20">
            <view class="main-content cu-list menu ">
                <view class="cu-item arrow">
                    <view class="content">
                        <text class="cuIcon-circlefill text-grey"></text>
                        <text class="text-grey"> 出行数据 + 分析 </text>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content">
                        <text class="cuIcon-circlefill text-grey"></text>
                        <text class="text-grey"> 加油数据 + 分析 </text>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content">
                        <text class="cuIcon-circlefill text-grey"></text>
                        <text class="text-grey"> 个人中心 + 设置 </text>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content">
                        <text class="cuIcon-circlefill text-grey"></text>
                        <text class="text-grey"> 问题反馈 </text>
                    </view>
                </view>
                <view class="cu-item arrow">
                    <view class="content">
                        <text class="cuIcon-circlefill text-grey"></text>
                        <text class="text-grey"> 关于我们 </text>
                    </view>
                </view>
                
               
            </view>         

    </view>

    <view class="end w-100">

    </view>
    
</view>




